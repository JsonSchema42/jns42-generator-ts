{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "run file",
      "program": "${file}",
      "args": [],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "watch"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "run package",
      "program": "${workspaceFolder}/src/program.ts",
      "args": [
        "package",
        "https://json-schema.org/draft/2020-12/schema",
        "--package-directory",
        ".package",
        "--package-name",
        "package",
        "--package-version",
        "0.0.0"
      ],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "watch"
    }
  ]
}
